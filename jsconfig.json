{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "allowJs": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "CalculationEngine": ["libraries/types/CalculationEngine.d.ts"],
      "CalculationEngine/*": ["libraries/types/CalculationEngine/*"]
    },
    "typeRoots": [
      "./libraries/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "scripts/**/*.js",
    "editor.js",
    "modellus.js",
    "libraries/types/**/*.d.ts"
  ]
}
